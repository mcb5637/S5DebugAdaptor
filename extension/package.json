{
  "name": "s5luadebug",
  "displayName": "S5LuaDebug",
  "description": "S5 lua debugging",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Debuggers"
  ],
  "activationEvents": [
    "onDebug"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mcb5637/S5DebugAdaptor.git"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "breakpoints": [
      {
        "language": "lua"
      }
    ],
    "debuggers": [
      {
        "type": "s5lua",
        "label": "S5 Lua Debug",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "absolute path to the SHoK executable"
              },
              "args": {
                "type": "array",
                "description": "command line parameters",
                "default": [
                  "-extra2"
                ]
              },
              "attachDelay": {
                "type": "number",
                "description": "startup delay",
                "default": 1
              }
            }
          },
          "attach": {}
        },
        "initialConfigurations": [
          {
            "type": "s5lua",
            "request": "launch",
            "program": "",
            "args": [
              "-extra2"
            ],
            "attachDelay": 1
          }
        ],
        "configurationSnippets": [
          {
            "label": "S5 Lua Debug: Launch",
            "description": "A new configuration for launching S5",
            "body": {
              "type": "s5lua",
              "request": "launch",
              "program": "",
              "args": [
                "-extra2"
              ],
              "attachDelay": 1
            }
          },
          {
            "label": "S5 Lua Debug: Attach",
            "description": "A new configuration for attaching to S5",
            "body": {
              "type": "s5lua",
              "request": "attach"
            }
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package & xcopy /Y ..\\README.md .\\ & xcopy /Y ..\\LICENSE .\\",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.84.0",
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "ts-loader": "^9.4.4",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "@vscode/test-electron": "^2.3.4"
  }
}